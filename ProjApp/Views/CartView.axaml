<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ProjApp.Views.CartView">
    
    
    <Grid Grid.Row="0" Background="#657378" Height = "40" ColumnDefinitions="Auto,*,*,*,Auto">
        <Rectangle Grid.Column="0" Width="40"></Rectangle>
        <Button Grid.Column="4" Width="40">
            <Image Source="/Assets/Image/cart.png"/>
        </Button>
        <StackPanel Grid.Column="2" Width="300" HorizontalAlignment="Center">
            <Label Foreground = "White" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,0">YOUR LIST FOR 1 EATING</Label>
        </StackPanel>
    </Grid>
</UserControl>
